@model BusinessManagementSystemApp.Models.Models.OrderViewModel
@{
    ViewBag.Title = "Index";
}

<div class="form-group">
    <h3 align="center"><b><u>Order List</u></b></h3>
</div>
<div class="container" style="width:90%;margin-top:6%;">
    <form method="post">
        <div class="form-group row">
            <div class="col-md-6">
                <a style="margin-top:2%" href="/Order/Save" class="btn btn-info"><i class="glyphicon glyphicon-new-window"></i> <b>New Order</b></a>
            </div>
            <div class="col-md-3">

            </div>
            <div class="col-md-3">

            </div>
        </div>
    </form>
</div>
@if (Model != null)
{
    <div class="container" style="width:90%;">
        <div class="form-group row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover table-striped table-responsive">
                    <thead style="background-color:teal; color:white; text-align:center; font-weight:bold">
                        <tr>
                            <td>SL</td>
                            <td>Customer Name</td>
                            <td>Contact</td>
                            <td>Address</td>
                            <td>Product Id</td>
                            <td>Product Name</td>
                            <td>Price</td>
                            <td>Quantity</td>
                            <td>Total Price</td>
                            <td>Paid</td>
                            <td>Due</td>
                            <td>Edit</td>
                            <td>Details</td>
                            <td>Delete</td>
                        </tr>
                    </thead>
                    <tbody style="text-align:center; font-weight:bold">
                        @{ int sl = 1; }
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td>@(sl++)</td>
                                <td>@order.CustName</td>
                                <td>@order.CustContact</td>
                                <td>@order.CustAddress</td>
                                <td>@order.ProductId</td>
                                <td>@order.ProductName</td>
                                <td>@order.ProductUnitPrice</td>
                                <td>@order.ProductQuantity</td>
                                <td>@order.TotalPrice</td>
                                <td>@order.Paid</td>
                                <td>@order.Due</td>
                                <td><a href="/Order/Update?id=@order.Id" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a></td>
                                <td><a href="/Order/GetDetails?id=@order.Id" class="btn btn-warning"><i class="glyphicon glyphicon-th-list"></i></a></td>
                                <td><a href="/Order/Delete?id=@order.Id" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

