@model BusinessManagementSystemApp.Models.Models.OrderViewModel
@{
    ViewBag.Title = "GetDetails";
}
<div class="container" style="width:70%;margin-top:3%;">
    <div class="form-group row">
        <a style="margin-top:2%" href="/Order/Index" class="btn btn-info"><i class="glyphicon glyphicon-list"></i> Order List</a><hr />
        <h3 class="text-info">Details of order</h3>
    </div>
</div>
@if (Model != null)
{
    <div class="container" style="margin-top:1%;">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Customer Name</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="CustName" value="@Model.CustName" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Customer Contact</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" value="@Model.CustContact" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Customer Address</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" value="@Model.CustAddress" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Product Id</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" value="@Model.ProductId" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Product Name</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" value="@Model.ProductName" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Quantity</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" value="@Model.ProductQuantity" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Unit Price</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" value="@Model.ProductUnitPrice" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Total Price</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" value="@Model.TotalPrice" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Paid</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" value="@Model.Paid" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Due</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" value="@Model.Due" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4"></div>
            <div class="col-md-5">
                <a href="/Order/Update?id=@Model.Id" class="btn btn-primary">Edit</a>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
}