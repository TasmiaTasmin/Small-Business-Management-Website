@model BusinessManagementSystemApp.Models.Models.OrderViewModel
@{
    ViewBag.Title = "Save";
}
<div class="container" style="width:70%;margin-top:3%;">
    <div class="form-group row">
        <a style="margin-top:2%" href="/Order/Index" class="btn btn-info"><i class="glyphicon glyphicon-list"></i> Order List</a><hr />
        <h3 class="text-info">Save a new Order-</h3>
        @if (ViewBag.Message != null)
        {
            <h3 width="60%" align="center" class="label-danger">@ViewBag.Message</h3>
        }
    </div>
</div>
<div class="container">
    <form method="post">
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Customer Name</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="CustName" placeholder="Enter customer name" value="@if (Model != null) { @Model.CustName}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Customer Contact</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" placeholder="Enter Contact" value="@if (Model != null) { @Model.CustContact}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Customer Address</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" placeholder="Enter Address" value="@if (Model != null) { @Model.CustAddress}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Product Id</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="ProductId" placeholder="Enter product id" value="@if (Model != null) { @Model.ProductId}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Product Name</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="ProductName" placeholder="Enter product name" value="@if (Model != null) { @Model.ProductName}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Quantity</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Quantity" placeholder="Enter quantity" value="@if (Model != null) { @Model.ProductQuantity}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Unit Price</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" placeholder="Enter product price" value="@if (Model != null) { @Model.ProductUnitPrice}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Total Price</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="TotalPrice" placeholder="Enter total price" value="@if (Model != null) { @Model.TotalPrice}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Paid</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Paid" placeholder="Enter paid amount" value="@if (Model != null) { @Model.Paid}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Due</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Due" placeholder="Enter due" value="@if (Model != null) { @Model.Due}"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4"></div>
            <div class="col-md-5">
                <input type="submit" class="btn btn-block btn-success" value="Save" />
            </div>
        </div>
    </form>
</div>