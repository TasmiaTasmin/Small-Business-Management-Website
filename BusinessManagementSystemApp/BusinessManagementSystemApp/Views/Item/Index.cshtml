@model BusinessManagementSystemApp.Models.Models.ItemViewModel
@{
    ViewBag.Title = "Index";
}

<div class="form-group">
    <h3 align="center"><b><u>Item List</u></b></h3>
</div>
<div class="container" style="width:90%;margin-top:6%;">
    <form method="post">
        <div class="form-group row">
            <div class="col-md-6">
                <a style="margin-top:2%" href="/Item/Save" class="btn btn-info"><i class="glyphicon glyphicon-new-window"></i> <b>New Item</b></a>
            </div>
            <div class="col-md-3">
                
            </div>
            <div class="col-md-3">
               
            </div>
        </div>
    </form>
</div>
@if (Model != null)
{
    <div class="container" style="width:90%;">
        <div class="form-group row">
            <div class="col-md-12">
                <table class="table table-bordered table-hover table-striped table-responsive">
                    <thead style="background-color:teal; color:white; text-align:center; font-weight:bold">
                        <tr>
                            <td>SL</td>
                            <td>Item Name</td>
                            <td>Price</td>
                            <td>Edit</td>
                            <td>Details</td>
                            <td>Delete</td>
                        </tr>
                    </thead>
                    <tbody style="text-align:center; font-weight:bold">
                        @{ int sl = 1;}
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@(sl++)</td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td><a href="/Item/Update?id=@item.Id" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a></td>
                                <td><a href="/Item/GetDetails?id=@item.Id" class="btn btn-warning"><i class="glyphicon glyphicon-th-list"></i></a></td>
                                <td><a href="/Item/Delete?id=@item.Id" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
