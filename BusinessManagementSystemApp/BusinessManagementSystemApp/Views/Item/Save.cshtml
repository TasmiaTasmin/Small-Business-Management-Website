@model BusinessManagementSystemApp.Models.Models.ItemViewModel
@{
    ViewBag.Title = "Save";
}
<div class="container" style="width:70%;margin-top:3%;">
    <div class="form-group row">
        <a style="margin-top:2%" href="/Item/Index" class="btn btn-info"><i class="glyphicon glyphicon-list"></i> Item List</a><hr />
        <h3 class="text-info">Save a new item-</h3>
        @if (ViewBag.Message != null)
        {
            <h3 width="60%" align="center" class="label-danger">@ViewBag.Message</h3>
        }
    </div>
</div>
<div class="container">
    <form method="post">
        
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Item Name</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Name" placeholder="Enter name" value="@if (Model != null) { @Model.Name}" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-2">
                <label>Price</label>
            </div>
            <div class="col-md-5">
                <input type="text" class="form-control" name="Price" placeholder="Enter price" value="@if (Model != null) { @Model.Price}" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4"></div>
            <div class="col-md-5">
                <input type="submit" class="btn btn-block btn-success" value="Save" />
            </div>
        </div>
    </form>
</div>